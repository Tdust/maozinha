<%= form_for(@produto) do |f| %>
  <% if @produto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@produto.errors.count, "Erro!") %> Este produto n√£o pode ser salvo:</h2>

      <ul>
      <% @produto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :categoria %><br>
    <%= f.text_field :categoria %>
  </div>
  <div class="field">
    <%= f.label :preco %><br>
    <%= f.text_field :preco %>
  </div>
  <div>
    <%= f.label :foto %>
    <%= image_tag @produto.foto_url, class: 'foto' if @produto.foto? %>
    <br/>
    <%= f.file_field :foto, label: 'Foto' , input_html: {accept: ('application/jpg') } %>
    <br/>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>


<% end %>
