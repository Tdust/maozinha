<p id="notice"><%= notice %></p>

<h1>Listando Produtos</h1>

<table>
  <colgroup width="80px">

  </colgroup>
  <thead>
    <tr>
      <th>Foto</th>
      <th>Nome</th>
      <th>Categoria</th>
      <th>Preco</th>
      <th colspan="3">Opções</th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= image_tag produto.foto, size: "64"%></td>
        <td><%= produto.nome %></td>
        <td><%= produto.categoria %></td>
        <td><%= produto.preco %></td>
        <td><%= link_to 'Exibir', produto %></td>
        <td><%= link_to 'Editar', edit_produto_path(produto) %></td>
        <td><%= link_to 'Excluir', produto, method: :delete, data: { confirm: 'Tem certeza???' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

